<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_onoff"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:contentDescription="status"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/name"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="199dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:text="DD"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/icon_wifi"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:contentDescription="wifi"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="13dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <!--androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:text=""
        android:theme="@style/SwitchColor" /-->

    <ProgressBar
        android:id="@+id/circle_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:theme="@style/CircleProgressbar"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_connect"
        android:width="80dp"
        android:layout_width="80dp"
        android:backgroundTint="@color/connect_button_background_color"
        android:textColor="@color/white"
        android:text="@string/connect"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:enabled="false"
        />

</LinearLayout>